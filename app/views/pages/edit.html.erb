<div class="container">
<h3>Editing this page</h3>

 <%= form_for(@page)do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @page.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="row">
    <div class="input-field col s8">
      <div class="field">
        <%= f.label :page_image %><br>
        <%= f.text_area :page_image, class: "materialize-textarea" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s8">
      <div class="field">
        <%= f.label :body %><br>
        <%= f.text_area :body, class: "materialize-textarea" %>
      </div>
    </div>
  </div>
  <div class="center-align">
    <div class="actions">
      <div class="waves-effect waves-light btn"><%= f.submit %></div>
    </div>
  </div>
  <% end %>
  </div>

<%= link_to 'Back', edit_story_path(@page.story) %>
</div>
