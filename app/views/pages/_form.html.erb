<h3>New page for: "<%= @story.title %>"</h3>


 <%= form_for @page, :url => { :action => :create, :id => @story.id } do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>
      <ul>
      <% @page.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

     <div class="row">
       <div class="col s12">
         <div class="file-field input-field">
          <div class="btn">
            <span>Upload cover image</span>
          <%= f.file_field :book_pictures%>  
          </div>
          <div class="file-path-wrapper">
            <input class="file-path validate" type="text">
          </div>
        </div>
      </div>
    </div>

  <div class="row">
    <div class="input-field col s12">
      <div class="field">
        <%= f.label :body %><br>
        <%= f.text_area :body, class: "materialize-textarea" %>
      </div>
    </div>
  </div>
    <div class="center-align">
        
          <div class="waves-effect waves-light btn"><%= f.submit %></div>
          <br>
          <br>
          <%= link_to 'Back', edit_story_path(@page.story), class: "back btn btn-medium waves-effect waves-light" %>
      </div>
<% end %>

