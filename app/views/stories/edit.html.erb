<div class="container">
  <h1>Editing Story</h1>

  <%= render 'form' %>

  <br>
  <h3>Pages</h3>

  <div class="row">
  <% @pages.each do |page| %>
    <div class="col s12 m4 ">
        <div class="card medium">
          <div class="card-image">
              <%= image_tag page.book_pictures.url %>
              <span class="card-title">Page number: <%= @count = @count + 1 %></span> 
          </div>
        <div class="card-content">
         <p><%= page.body %></p>
       </div>
       <div class="card-action">
        <div class="center-align">
          <%= link_to 'Edit', edit_story_page_path(@story, page) %> 
          <%= link_to 'Delete', story_page_path(@story, page), method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
      </div>
    </div>
  <% end %>
</div>


  <div class="center-align">
    <%= link_to 'Add a new page', new_story_page_path(@story) %> | 

    <%= link_to 'Back', stories_path %> | 
    <%= link_to 'Delete this story', @story, method: :delete, data: { confirm: 'Are you sure you want to delete this story?' } %>
    </div>
  </div>
