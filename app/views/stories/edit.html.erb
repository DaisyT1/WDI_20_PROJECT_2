<div class="container">
  <br>


    <h1>Editing Story</h1>
    <%= render 'form' %>


  <br>
  <h3>Pages</h3>

  <div class="row">
    <% @pages.each do |page| %>
    <div class="col s12 m4 ">
      <div class="card medium">
        <div class="card-image">
          <%= image_tag page.book_pictures.url, class: "edit-thumbnail" %>
          <span class="card-title" id="card-title">Page number: <%= @count = @count + 1 %></span> 
        </div>
        <div class="card-content">
         <p><%= page.body %></p>
       </div>
       <div class="card-action">
        <div class="center-align">
          <%= link_to 'Edit', edit_story_page_path(@story, page) %> 
          <%= link_to 'Delete', story_page_path(@story, page), method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    </div>
  </div>
  <% end %>

  <div class="col s12 m4 ">
    <div class="card medium">
      <div class="card-image">
        <a href="<%= new_story_page_path(@story) %>">
          <img class="edit-thumbnail" src="https://images.unsplash.com/photo-1455884981818-54cb785db6fc?ixlib=rb-0.3.5&q=80&fm=jpg&crop=entropy&s=5fba38e3690eaa8926f7c46acac70345"></a>
        </div>
        <div class="card-content">
          <p>Add another page</p>
        </div>
        <div class="card-action">
          <div class="center-align">
            <a href="<%= new_story_page_path(@story) %>" class="addPageButton btn-floating btn-large waves-effect waves-light teal"><i class="material-icons">add</i></a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="center-align">
    <%= link_to 'Back', stories_path, class: "back btn btn-medium waves-effect waves-light" %>
    <br>
    <br>
    <%= link_to 'Delete this story', @story, method: :delete, class: "btn btn-small waves-effect red", data: { confirm: 'Are you sure you want to delete this story?' } %>
  </div>
</div>
</div>
<br>
