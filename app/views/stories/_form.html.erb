
<%= form_for(@story) do |f| %>

<% if @story.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@story.errors.count, "error") %> prohibited this story from being saved:</h2>

  <ul>
    <% @story.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
    <div class="row">
      <div class="col s12">
        <div class="file-field input-field">
         <div class="btn">
           <span>Upload cover image</span>
           <%= f.file_field :cover_img%>  
         </div>
         <div class="file-path-wrapper">
           <input class="file-path validate" type="text">
         </div>
       </div>

     </div>
   </div>


   <div class="row">
    <div class="input-field col s12">
      <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s12">
      <div class="field">
        <label>Age this story is aimed at</label>
        <%= f.number_field :age %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s12">
      <div class="field">
        <label>Blurb</label>
        <%= f.text_area :note, class: "materialize-textarea"%>
      </div>
    </div>
  </div>
  <div class="center-align">
    <div class="actions">
      <div class="waves-effect waves-light btn"><%= f.submit %>
      </div>
    </div>
  </div>

  <% end %>
