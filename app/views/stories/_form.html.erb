

<%= form_for(@story) do |f| %>
  <% if @story.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@story.errors.count, "error") %> prohibited this story from being saved:</h2>

      <ul>
      <% @story.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="input-field col s8">
      <div class="field">
        <%= f.label :cover_img %><br>
        <%= f.text_area :cover_img, class: "materialize-textarea" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s8">
      <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s8">
      <div class="field">
        <%= f.label :age %><br>
        <%= f.number_field :age %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s8">
      <div class="field">
        <%= f.label :note %><br>
        <%= f.text_area :note, class: "materialize-textarea"%>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
