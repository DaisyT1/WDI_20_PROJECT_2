
<%= form_for(@story) do |f| %>

<% if @story.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@story.errors.count, "error") %> prohibited this story from being saved:</h2>

    <ul>
      <% @story.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <div class="row">
    <div class="input-field col s8">
      <div class="file-field input-field">
        <div class="btn">
        <span>Upload Cover Image</span>
        <%= f.file_field :cover_img%>
      </div>
    </div>
    <div class="file-path-wrapper">
      <input class="file-path validate" type="text">
    </div>
  </div>
  </div>


<div class="row">
  <div class="input-field col s8">
    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
  </div>
</div>
<div class="row">
  <div class="input-field col s8">
    <div class="field">
      <%= f.label :age %><br>
      <%= f.number_field :age %>
    </div>
  </div>
</div>
<div class="row">
  <div class="input-field col s8">
    <div class="field">
      <%= f.label :note %><br>
      <%= f.text_area :note, class: "materialize-textarea"%>
    </div>
  </div>
</div>
<div class="center-align">
  <div class="actions">
    <div class="waves-effect waves-light btn"><%= f.submit %>
    </div>
  </div>
</div>

<% end %>
