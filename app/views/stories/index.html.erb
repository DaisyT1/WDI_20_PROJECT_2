<p id="notice"><%= notice %></p>

<h1>Listing Stories</h1>

<table>
  <thead>
    <tr>
      <th>Cover img</th>
      <th>Title</th>
      <th>Age</th>
      <th>Note</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stories.each do |story| %>
      <tr>
        <td><a href="stories/<%= story.id %>"><%= image_tag("#{story.cover_img}", size: "50") %></td></a>
        <td><%= link_to story.title, :controller => :pages, :action => :new, :id => story.id %></td>
        <td><%= story.age %></td>
        <td><%= story.note %></td>
        <td><%= story.user_id %></td>
        <td><%= link_to 'Show', story %></td>
        <td><%= link_to 'Edit', edit_story_path(story) %></td>
        <td><%= link_to 'Destroy', story, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

