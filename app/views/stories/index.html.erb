<p id="notice"><%= notice %></p>

<h1>Listing Stories</h1>

<% @stories.each do |story| %>
<div class="row">
     <div class="col s12 m4">
       <div class="card">
         <div class="card-image">
           <img src="<%= story.cover_img %>">
           <span class="card-title"><%= story.title %></span>
         </div>
         <div class="card-content">
           <p><%= story.note %></p>
         </div>
         <div class="card-action">
           <a href="stories/<%= story.id %>">Read</a>
           <a><%= link_to 'Edit', edit_story_path(story) %></a>
           <a><%= link_to 'Delete', story, method: :delete, data: { confirm: 'Are you sure you want to delete this story?' } %></a>
         </div>
       </div>
     </div>
     <% end %>
   </div>
   <div class="center-align">
   <h5>Add another story</h5>
   <a href="stories/new" class="btn-floating btn-large waves-effect waves-light"><i class="material-icons">add</i></a>
   </div>
